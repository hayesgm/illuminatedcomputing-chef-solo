{
  "set_fqdn": "illuminatedcomputing.com",

  "users": {
    "ic": {
      "id": "ic",
      "uid": 2000,
      "gid": 2000,
      "password": "*",
      "shell": "\/bin\/bash",
      "comment": "Illuminated Computing"
    }
  },

  "rvm": { "script": "rvm-install-latest" },

  "passenger": {
    "version": "3.0.3",
    "module_path": "/path/gems/passenger-3.0.3/ext/apache2/mod_passenger.so",
    "root_path": "/path/gems/passenger-3.0.3",
    "ruby_bin": "/usr/bin/ruby"
  },

  "run_list": [
    "recipe[base]",
    "recipe[hostname]",
    "recipe[users]",
    // "recipe[rvm::ruby_193]",
    // "recipe[postgresql::client]",
    // "recipe[postgresql::server]",
    // "recipe[psql_user]",
    "recipe[apache2]",
    "recipe[apache2::mod_php5]",
    // "recipe[rails]",
    // "recipe[passenger_apache2]",
    // "recipe[passenger_apache2::mod_rails]",
    "recipe[ic]"
  ]
}
